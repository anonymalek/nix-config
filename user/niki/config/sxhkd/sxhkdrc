XF86AudioLowerVolume
  pulsemixer --change-volume -5

XF86AudioMute
  pulsemixer --toggle-mute

XF86AudioNext
  mpc prev

XF86AudioPlay
  mpc toggle

XF86AudioPrev
  mpc next

XF86AudioRaiseVolume
  pulsemixer --change-volume +5

XF86AudioStop
  mpc stop

XF86MonBrightnessDown
  brightnessctl s 10%-

XF86MonBrightnessUp
  brightnessctl s +10%

super + Return
  kitty --directory ~/

